
<% if is_follow %>
  <h1>Follow Users</h1>
<% else %>
  <h1>Follower Users</h1>
<% end %>

<% if target_users.blank? %>
  ユーザーはいません
<% else %>
  <table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% target_users.each do |target_user| %>
      <tr>
        <td><%= image_tag target_user.get_profile_image(50, 50) %></td>
        <td><%= target_user.name %></td>
        <td>
          <%= "フォロー数: #{ target_user.followers.count }"%>
        </td>
        <td>
          <%= "フォロワー数: #{ target_user.followed.count }"%>
        </td>
        <td>
          <%= link_to 'Show', target_user, class: "user_#{target_user.id}" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
