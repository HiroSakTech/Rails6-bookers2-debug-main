<h1>
  <%= "#{model_name}s search for \"#{word}\""%>
</h1>

<% if search_results.blank? %>
  <h1>results not found.</h1>
<% else %>
  <table class='table table-hover table-inverse'>
    <% if model_name == "Book" %>
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% search_results.each do |book| %>
          <tr>
            <td>
              <%= image_tag book.user.get_profile_image, size:'50x50' %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    <% elsif model_name == "User" %>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% search_results.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(50, 50) %></td>
            <td>
              <%= link_to user_path(user.id) do %>
                <%= user.name %>
              <% end %>
            </td>
            <td>
              <%= user.introduction %>
            </td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>
<% end %>
