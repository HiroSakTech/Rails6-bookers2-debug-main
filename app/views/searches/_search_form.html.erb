
<div class="container">
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="search-form col-md-8">
      <%= form_with url: search_path, local: true, method: :get do |f| %>
        <%= f.search_field(:word) %>
        <%= f.select :model, ['User', 'Book'] %>
        <%= f.select :pattern_match, { "完全一致" => "exact_match","前方一致" => "forward_match", "後方一致" => "backward_match", "部分一致" => "partial_match" } %>
        <%= f.submit "検索", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
