<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>introduction</th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%= image_tag group.get_group_image(50, 50) %></td>
        <td><%= group.name %></td>
        <td><%= group.introduction %></td>
          <% if group.owner_id == current_user.id %>
            <td><%= link_to 'Edit', edit_group_path(group), class: "btn btn-sm btn-success edit_book_#{group.id}" %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
