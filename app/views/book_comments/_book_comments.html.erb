<% book.book_comments.each do |book_comment| %>
  <div class='book_comment-list'>
    <div class='book_comment-list__comment-image'>
      <p><%= image_tag book_comment.user.get_profile_image %></p>
    </div>
    <div class='book_comment-list__comment-content'>
      <%= book_comment.user.name %>
      <%= book_comment.comment %>
      <% if book_comment.user_id == current_user.id %>
        <%= link_to 'Destroy', book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, data: { confirm: '本当に消しますか？' }, remote: true, class: "btn btn-sm btn-danger destroy_book_#{book_comment.id}"%>
      <% end %>
    </div>
  </div>
<% end %>
